# Frontend Dockerfile
FROM node:20 as build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

RUN npm run build --prod

FROM nginx:latest

# Update this line to copy from /app/dist/ProNeighbor
COPY --from=build /app/dist/ProNeighbor /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]